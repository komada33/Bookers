<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <%= @book.errors.count %> errors
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>

<%= form_with model: @book, method: :patch do |f| %>
<div class=command>
 <div class=c-title>
  <h4>Title</h4>
  <%= f.text_field :title %>
 </div>

 <div class=c-body>
  <h4>Body</h4>
  <%= f.text_area :body %>
 </div>

 <div class=submit>
  <%= f.submit 'Update Book' %>
  <% end %>
 </div>
</div>
<%= link_to 'show', book_path(@book.id) %>
|
<%= link_to "Back", books_path %>
</div>