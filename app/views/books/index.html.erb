<h1>Bookers</h1>
<% @books. each do |book| %>
<%= book.title %>
<%= book.body %>
<%= link_to 'show', '/books/:id' %></br>
<% end %>

<h2>New book</h2>
<%= form_for @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>