<h1>Bookers</h1>
<table>
 <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
 </thead>

 <tbody>
   <% @books. reverse_each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'show', book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Delete", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
   <% end %>
 </tbody>
</table>

</tbody>
<h2>New book</h2>
<% if @book.errors.any? %>
 <%= @book.errors.count %> errors
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>

 <%= form_with model: @book, local:true do |f| %>

<h4>Title</h4>
 <%= f.text_field :title %>

<h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>